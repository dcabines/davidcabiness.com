---
import Layout from "../layouts/main.astro";
import Header from "../resume/header.astro";
import Tech from "../resume/tech.astro";
import Source from "../resume/source.astro";
import Education from "../resume/education.astro";
import Experience from "../resume/experience.astro";
---

<Layout>
  <main>
    <a class="download" target="_blank" href="David Cabiness.pdf">Download</a>
    <Header />

    <section>
      <Tech />
    </section>

    <section>
      <Experience />
    </section>

    <section>
      <Education />
    </section>
  </main>
</Layout>

<Source />

<style is:global>
  body {
    min-height: 100%;
    font-weight: 400;
    background: var(--color-body);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .download {
    position: absolute;
    top: 0;
    right: 0;
    border: none;
    background: var(--color-grey1);
    padding: 0.5rem;
    border-radius: 0 0 0 6px;
    text-decoration: none;
    color: var(--color-text);
  }

  main {
    min-width: fit-content;
    max-width: fit-content;
    color: var(--color-text);
    background: var(--color-background);
    box-shadow: 1px 1px 2px var(--color-grey1);
    border-radius: 3px;
    padding: 2rem;
    margin-top: 4rem;
    position: relative;
  }

  section {
    margin-top: 3rem;
  }

  section > :not(:first-child) {
    margin-left: 1rem;
  }

  h2 {
    font-size: 1.5rem;
    border-bottom: 1px solid black;
  }

  h3 {
    font-size: 1.2rem;
  }

  li {
    margin-left: 1rem;
  }

  .line {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  @media only screen and (max-width: 600px) {
    main {
      box-shadow: none;
      width: 100vw;
      min-width: 100vw;
      max-width: 100vw;
      margin: 0;
      padding: 1rem;
    }

    .line {
      flex-direction: column;
      align-items: start;
    }

    .download {
      display: none;
    }
  }

  @media print {
    html {
      font-size: 10pt;
    }

    main {
      box-shadow: none;
      width: 100vw;
      min-width: 100vw;
      max-width: 100vw;
      margin: 0;
    }

    .download {
      display: none;
    }
  }
</style>
