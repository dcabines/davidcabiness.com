---
import Layout from "../layouts/main.astro";
import Header from '../content/resume/header.astro';
import Tech from "../content/resume/tech.md";
import Experience from "../content/resume/experience.md";
import Source from '../content/resume/source.astro';
---

<link
  slot="head"
  href="https://fonts.googleapis.com/css?family=Lato:400,300,700"
  rel="stylesheet"
  type="text/css"
/>

<Layout>
  <main>
    <Header />

    <article>
      <section>
        <Tech />
      </section>

      <section>
        <Experience />
      </section>
    </article>
  </main>
</Layout>
<Source />

<style is:global>
  html {
    font-size: 16px;
    line-height: 1.5rem;
    font-family: "Lato", sans-serif;
  }

  body {
    min-height: 100%;
    font-weight: 400;
    background: var(--color-body);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  main {
    min-width: fit-content;
    max-width: fit-content;
    color: var(--color-text);
    background: var(--color-background);
    box-shadow: 1px 1px 2px var(--color-grey1);
    border-radius: 3px;
    padding: 2rem;
    margin-top: 4rem;
  }

  section {
    margin: 1rem 0;
  }

  section > :not(:first-child) {
    margin-left: 1rem;
  }

  h2 {
    display: block;
    border-bottom: 1px solid black;
  }

  h3 {
    margin-top: 1rem;
  }

  li {
    margin-left: 1rem;
  }

  @media only screen and (max-width: 600px) {
    main {
      box-shadow: none;
      width: 100vw;
      min-width: 100vw;
      max-width: 100vw;
      margin: 0;
      padding: 1rem;
    }
  }

  @media print {
    html {
      font-size: 10pt;
    }

    main {
      box-shadow: none;
      width: 100vw;
      min-width: 100vw;
      max-width: 100vw;
      margin: 0;
    }
  }
</style>
