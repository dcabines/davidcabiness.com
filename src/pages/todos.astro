---
import Layout from "../layouts/main.astro";
import Todo from "../todo/todo.svelte";
const { oltp } = Astro.locals.runtime.env;
const todos = await oltp.prepare("select * from todo").all();
---

<Layout>
    <Todo client:load todos={todos.results} />
</Layout>

<style is:global>
  input {
    display: block;
  }
</style>
