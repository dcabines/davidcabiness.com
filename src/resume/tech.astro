---
import { getEntry } from 'astro:content';
const tech1 = await getEntry('tech', 'tech1');
const tech2 = await getEntry('tech', 'tech2');
const tech3 = await getEntry('tech', 'tech3');
const { Content: Tech1 } = await tech1.render();
const { Content: Tech2 } = await tech2.render();
const { Content: Tech3 } = await tech3.render();
---

<h2>Languages and Technologies</h2>

<div>
  <Tech1 />
  <Tech2 />
  <Tech3 />
</div>

<style>
  div {
    display: flex;
    justify-content: space-between;
    min-width: 70ch;
  }

  @media only screen and (max-width: 600px) {
    div {
      display: block;
      min-width: 0;
    }
  }
</style>
